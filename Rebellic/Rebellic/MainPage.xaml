                    <TextBlock x:Name="videreTilMedarIkon" FontFamily="Segoe MDL2 Assets" Text="&#xEBE7;" Margin="0,4,0,0" Width="25" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="SemiBold" FontSize="20" Foreground="{Binding VidereTilMedarbejder, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" TextAlignment="Right">
                        <Interactivity:Interaction.Behaviors>
                            <Core:EventTriggerBehavior EventName="Tapped">
                                <Core:CallMethodAction TargetObject="{Binding Mode=OneWay}" MethodName="BookingVidere"/>
                            </Core:EventTriggerBehavior>
                        </Interactivity:Interaction.Behaviors>
                    </TextBlock>
                </StackPanel>
                <Rectangle HorizontalAlignment="Center" Width="900" Height="1" Margin="0,0,0,439" Fill="#19000000"/>
                <Rectangle HorizontalAlignment="left" Width="1" Height="500" Margin="185,60,0,0" Fill="#19000000"/>
                <Rectangle HorizontalAlignment="Center" Width="900" Height="1" Margin="0,559,0,0" Fill="#19000000"/>
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Left" Height="500" Width="185" Margin="0,0,0,-59" Background="#66FFFFFF" Visibility="Visible">
                    <Grid Height="500" >
                        <ListView ItemsSource="{Binding ProductCategories, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Margin="0 0" />
                        <Rectangle HorizontalAlignment="Left" Width="2" Height="500" Margin="184,0,0,0" Fill="#1C000000"/>
                    </Grid>
                </StackPanel>
                <Grid x:Name="Products" Width="715" Height="500" Margin="185,0,0,-59" Padding="25 15"  Background="#66FFFFFF">
