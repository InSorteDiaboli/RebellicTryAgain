                        </StackPanel>
                        <Rectangle x:Name="VidereTilTidspunktBackground" Width="100" Fill="#CC448AFF" Height="30" VerticalAlignment="Top" />
                        <TextBlock Text="VÆLG" Margin="-100,0,0,59" Padding="0,4,0,0" Height="30" Width="100" TextAlignment="Center" Foreground="White">
                            <Interactivity:Interaction.Behaviors>
                                <Core:EventTriggerBehavior EventName="Tapped">
                                    <Core:CallMethodAction TargetObject="{Binding Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" MethodName="BookingVidere"/>
                                </Core:EventTriggerBehavior>
                            </Interactivity:Interaction.Behaviors>
                        </TextBlock>
                    </StackPanel>
                </StackPanel>
            </Grid>
            <Grid x:Name="VælgTidspunkt" Visibility="{Binding DateAndTimeViewVisibilty, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="900" Height="560" Background="#D8FFFFFF" Margin="0,0,0,100" VerticalAlignment="Center" HorizontalAlignment="Center">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Top" Height="60" Background="White" Padding="9 0">
                    <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xEC52;" Margin="0,4,0,0" Width="25" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="SemiBold" FontSize="20" Foreground="#FFFF3636" TextAlignment="Right">
                        <Interactivity:Interaction.Behaviors>
                            <Core:EventTriggerBehavior EventName="Tapped">
                                <Core:CallMethodAction TargetObject="{Binding Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" MethodName="BookingTilbage"/>
                            </Core:EventTriggerBehavior>
                        </Interactivity:Interaction.Behaviors>
                    </TextBlock>
                    <TextBlock Text="VÆLG MEDARBEJDER" HorizontalAlignment="Center" VerticalAlignment="Center" Width="165" FontWeight="SemiBold" FontSize="16" Foreground="#FFFF3636" TextAlignment="Center">
                        <Interactivity:Interaction.Behaviors>
                            <Core:EventTriggerBehavior EventName="Tapped">
                                <Core:CallMethodAction TargetObject="{Binding Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" MethodName="BookingTilbage"/>
                            </Core:EventTriggerBehavior>
                        </Interactivity:Interaction.Behaviors>
                    </TextBlock>
                    <TextBlock Text="VÆLG TIDSPUNKT" Width="440" HorizontalAlignment="Center" Padding="55,0,2,0" VerticalAlignment="Center" FontWeight="SemiBold" FontSize="24" Foreground="#FF333333" TextAlignment="Center" FontFamily="Segoe UI"/>
                    <TextBlock x:Name="videreTilKontaktT" Text="ANGIV KONTAKTOPLYSNIGER" HorizontalAlignment="Center" VerticalAlignment="Center" Width="220" FontWeight="SemiBold" FontSize="16" Foreground="{Binding VidereTilKontakt, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" TextAlignment="Center">
                        <Interactivity:Interaction.Behaviors>
                            <Core:EventTriggerBehavior EventName="Tapped">
                                <Core:CallMethodAction TargetObject="{Binding Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" MethodName="BookingVidere"/>
                            </Core:EventTriggerBehavior>
                        </Interactivity:Interaction.Behaviors>
                    </TextBlock>
                    <TextBlock x:Name="videreTilKontaktIkon" FontFamily="Segoe MDL2 Assets" Text="&#xEBE7;" Margin="0,4,0,0" Width="25" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="SemiBold" FontSize="20" Foreground="{Binding VidereTilKontakt, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" TextAlignment="Right">
                        <Interactivity:Interaction.Behaviors>
                            <Core:EventTriggerBehavior EventName="Tapped">
                                <Core:CallMethodAction TargetObject="{Binding Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" MethodName="BookingVidere"/>
                            </Core:EventTriggerBehavior>
                        </Interactivity:Interaction.Behaviors>
                    </TextBlock>
                </StackPanel>
                <TextBlock x:Name="valgteMedarbejderTitle" Text="Vælg din ønskede dato herunder, og de ledige tider vil blive vist til højre" TextWrapping="Wrap" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="80,70,0,0"/>
                <ItemsControl VerticalAlignment="Top" Margin="80,100,0,0" Width="296" HorizontalAlignment="Left" ItemsSource="{Binding DatePickers, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                <TextBlock x:Name="IngenLedigeTider" Visibility="{Binding NoAvailableTimes, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" TextWrapping="Wrap" Text="{Binding TidErrorMessage,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" FontWeight="SemiBold" Foreground="Red" Width="420" TextAlignment="Center" Margin="350,105,0,0"/>
                <ItemsControl ItemsSource="{Binding AvailableTimeCollection, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="350,100,0,0" Padding="0 0" VerticalAlignment="Top" Width="420" Height="430"/>
                <TextBlock x:Name="valgteTidTekst" FontWeight="SemiBold" TextWrapping="Wrap" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="36" Foreground="#FF333333" />
            </Grid>
            <Grid x:Name="AngivKontaktOplysninger" Visibility="{Binding ContactViewVisibilty, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="900" Height="560" Background="#D8FFFFFF" Margin="0,0,0,100" VerticalAlignment="Center" HorizontalAlignment="Center">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Top" Height="60" Background="White" Padding="9 0">
                    <TextBlock x:Name="tilbageTilTidIkon" FontFamily="Segoe MDL2 Assets" Text="&#xEC52;" Margin="0,4,0,0" Width="25" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="SemiBold" FontSize="20" Foreground="#FFFF3636" TextAlignment="Right">
                        <Interactivity:Interaction.Behaviors>
                            <Core:EventTriggerBehavior EventName="Tapped">
                                <Core:CallMethodAction TargetObject="{Binding Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" MethodName="BookingTilbage"/>
                            </Core:EventTriggerBehavior>
                        </Interactivity:Interaction.Behaviors>
                    </TextBlock>
                    <TextBlock x:Name="tilbageTilTidT" Text="VÆLG TIDSPUNKT" HorizontalAlignment="Center" VerticalAlignment="Center" Width="140" FontWeight="SemiBold" FontSize="16" Foreground="#FFFF3636" TextAlignment="Center">
                        <Interactivity:Interaction.Behaviors>
                            <Core:EventTriggerBehavior EventName="Tapped">
                                <Core:CallMethodAction TargetObject="{Binding Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" MethodName="BookingTilbage"/>
                            </Core:EventTriggerBehavior>
                        </Interactivity:Interaction.Behaviors>
                    </TextBlock>
                    <TextBlock Text="ANGIV KONTAKTOPLYSNINGER" Width="544" HorizontalAlignment="Center" Padding="20,0,2,0" VerticalAlignment="Center" FontWeight="SemiBold" FontSize="24" Foreground="#FF333333" TextAlignment="Center" FontFamily="Segoe UI"/>
                    <TextBlock Visibility="{Binding ContactInfoViewVisibilty, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Text="BEKRÆFT BOOKING" HorizontalAlignment="Center" VerticalAlignment="Center" Width="146" FontWeight="SemiBold" FontSize="16" Foreground="{Binding VidereTilBekræft, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" TextAlignment="Center">
                        <Interactivity:Interaction.Behaviors>
                            <Core:EventTriggerBehavior EventName="Tapped">
                                <Core:CallMethodAction TargetObject="{Binding Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" MethodName="BookingVidere"/>
                            </Core:EventTriggerBehavior>
                        </Interactivity:Interaction.Behaviors>
                    </TextBlock>
                    <TextBlock  Visibility="{Binding ContactInfoViewVisibilty, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" FontFamily="Segoe MDL2 Assets" Text="&#xEBE7;" Margin="0,4,0,0" Width="25" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="SemiBold" FontSize="20" Foreground="{Binding VidereTilBekræft, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" TextAlignment="Right">
                        <Interactivity:Interaction.Behaviors>
                            <Core:EventTriggerBehavior EventName="Tapped">
                                <Core:CallMethodAction TargetObject="{Binding Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" MethodName="BookingVidere"/>
                            </Core:EventTriggerBehavior>
                        </Interactivity:Interaction.Behaviors>
                    </TextBlock>
                </StackPanel>
                <Grid x:Name="AngivTlfGrid" Visibility="{Binding TlfViewVisibilty, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                    <TextBlock TextWrapping="Wrap" Width="450" TextAlignment="Center" Text="Indtast venligst mobilnummer. Hvis du tidligere har brugt systemet, så brug samme nummer som sidst." HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,200" Foreground="#FF333333"/>
                    <Border VerticalAlignment="Center" HorizontalAlignment="Center" Width="302" Height="34" BorderThickness="1" BorderBrush="#FFCDCDCD"/>
                    <TextBox Text="{Binding Customer_Phone, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Center" x:Name="KontaktTlf" PlaceholderText="Mobil" Width="300" VerticalAlignment="Center" Margin="0,0,0,0" BorderBrush="#CCFFFFFF" Background="#CCFFFFFF">
                        <Interactivity:Interaction.Behaviors>
                            <Core:EventTriggerBehavior EventName="TextChanged">
                                <Core:CallMethodAction TargetObject="{Binding Mode=OneWay}" MethodName="ValidatePhoneNumber"/>
                            </Core:EventTriggerBehavior>
                        </Interactivity:Interaction.Behaviors>
                    </TextBox>
                    <Rectangle Width="100" Height="32" Margin="0,80,0,0" Fill="{Binding VidereTilKontaktInfo, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                    <TextBlock Text="BEKRÆFT" TextAlignment="Center" Padding="0,5,0,0" Foreground="White" Width="100" Height="32" Margin="0,80,0,0">
                        <Interactivity:Interaction.Behaviors>
                            <Core:EventTriggerBehavior EventName="Tapped">
                                <Core:CallMethodAction TargetObject="{Binding Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" MethodName="BookingVidere"/>
                            </Core:EventTriggerBehavior>
                        </Interactivity:Interaction.Behaviors>
                    </TextBlock>
                </Grid>
                <Grid x:Name="AngivKontakOplGrid" Visibility="{Binding ContactInfoViewVisibilty, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" >
                    <TextBlock TextWrapping="Wrap" Width="550" TextAlignment="Center" Text="Indtast dine informationer herunder. Bruger du et telefonnr, som allerede er i systemet, vil info blive udfyldt automatisk. Du kan ændre informationen efter behov, også selvom de er blevet autogeneret" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,95,0,0" Foreground="#FF333333"/>
                    <StackPanel x:Name="AngivKontakt" Visibility="Visible" VerticalAlignment="Center" Margin="-50,100,0,0">
                        <StackPanel Orientation="Horizontal" Padding="230 0" Margin="0,0,0,8">
                            <TextBlock Text="Navn" Width="100" TextAlignment="Right" Padding="0,5,5,0" FontWeight="SemiBold" Foreground="#FF333333" />
                            <TextBlock Text="*" Margin="0,0,20,0" Padding="0,5,0,0" FontWeight="SemiBold" Foreground="DodgerBlue"/>
                            <TextBox Text="{Binding Customer_Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Center" x:Name="KontaktNavn" PlaceholderText="Navn" Width="380" VerticalAlignment="Center" Margin="0,0,0,0" BorderBrush="#0C000000" Background="#CCFFFFFF">
                                <Interactivity:Interaction.Behaviors>
                                    <Core:EventTriggerBehavior EventName="TextChanged">
                                        <Core:CallMethodAction TargetObject="{Binding Mode=OneWay}" MethodName="ValidateContactInfo"/>
                                    </Core:EventTriggerBehavior>
                                </Interactivity:Interaction.Behaviors>
                            </TextBox>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Padding="230 0" Margin="0,0,0,8">
                            <TextBlock Text="Adresse" Width="100" TextAlignment="Right" Padding="0,5,5,0" FontWeight="SemiBold" Foreground="#FF333333" />
                            <TextBlock Text="*" Margin="0,0,20,0" Padding="0,5,0,0" FontWeight="SemiBold" Foreground="DodgerBlue"/>
                            <TextBox Text="{Binding Customer_Adress, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Center" x:Name="KontaktAdresse" PlaceholderText="Adresse" Width="380" VerticalAlignment="Center" Margin="0,0,0,0" BorderBrush="#0C000000" Background="#CCFFFFFF">
                                <Interactivity:Interaction.Behaviors>
                                    <Core:EventTriggerBehavior EventName="TextChanged">
                                        <Core:CallMethodAction TargetObject="{Binding Mode=OneWay}" MethodName="ValidateContactInfo"/>
                                    </Core:EventTriggerBehavior>
                                </Interactivity:Interaction.Behaviors>
                            </TextBox>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Padding="230 0" Margin="0,0,0,8">
                            <TextBlock Text="Postnr / by" Width="100" TextAlignment="Right" Padding="0,5,5,0" FontWeight="SemiBold" Foreground="#FF333333" />
                            <TextBlock Text="*" Margin="0,0,20,0" Padding="0,5,0,0" FontWeight="SemiBold" Foreground="DodgerBlue"/>
                            <TextBox Text="{Binding Customer_Zipcode, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Center" x:Name="KontaktPostby" PlaceholderText="Postnr" Width="110" VerticalAlignment="Center" Margin="0,0,10,0" BorderBrush="#0C000000" Background="#CCFFFFFF">
                                <Interactivity:Interaction.Behaviors>
                                    <Core:EventTriggerBehavior EventName="TextChanged">
                                        <Core:CallMethodAction TargetObject="{Binding Mode=OneWay}" MethodName="ValidateContactInfo"/>
                                    </Core:EventTriggerBehavior>
                                </Interactivity:Interaction.Behaviors>
                            </TextBox>
                            <TextBox Text="{Binding Customer_City, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Center" x:Name="KontaktBy" PlaceholderText="By" Width="260" VerticalAlignment="Center" Margin="0,0,0,0" BorderBrush="#0C000000" Background="#CCFFFFFF">
                                <Interactivity:Interaction.Behaviors>
                                    <Core:EventTriggerBehavior EventName="TextChanged">
                                        <Core:CallMethodAction TargetObject="{Binding Mode=OneWay}" MethodName="ValidateContactInfo"/>
                                    </Core:EventTriggerBehavior>
                                </Interactivity:Interaction.Behaviors>
                            </TextBox>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Padding="230 0" Margin="0,0,0,8">
                            <TextBlock Text="Email" Width="100" TextAlignment="Right" Padding="0,5,5,0" FontWeight="SemiBold" Foreground="#FF333333" />
                            <TextBlock Text="*" Margin="0,0,20,0" Padding="0,5,0,0" FontWeight="SemiBold" Foreground="DodgerBlue"/>
